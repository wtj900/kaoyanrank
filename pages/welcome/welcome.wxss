/* pages/welcome/welcome.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login-bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -100;
}
.login-title {
  margin-top: 60rpx;
  text-align: center;
}
.login-logo-image {
  width: 360rpx;
  height: 80rpx;
  margin-top: 204rpx;
}
.login-tip {
  font-size: 9pt;
  color: #333;
  margin-top: 40rpx;
}
.login-confirm-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 84rpx;
  width: 484rpx;
  background: #f73559;
  font-size: 13pt;
  line-height: 84rpx;
  color: #fff;
  border-radius: 50px;
  margin-top: 590rpx;
}
.login-confirm-btn:active {
  opacity: .8;
}
.login-confirm-btn-image {
  width: 42rpx;
  height: 36rpx;
  margin-right: 16rpx;
}
.login-message {
  font-size: 9pt;
  color: #888;
  margin-top: 30rpx;
}
